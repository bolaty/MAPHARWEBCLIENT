@{
    ViewBag.Title = "ListeApprovisionnements";
    Layout = "~/Views/Shared/_LayoutMenuGestion.cshtml";
}


<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader" style="background: Beige">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-1 mr-5">GESTION</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Stock</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Liste</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Liste approvisionnements</a>
                        </li>                       
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Card-->
                    <div class="card card-custom">
                        <div class="card-header" style="background-color: #F5F500">
                            <div class="card-title">
                                <span class="card-icon">
                                    <i class="fas fa-clipboard-list text-dark icon-xl"></i>
                                </span>
                                <h3 class="card-title" style="font-size: 30px; font-family: 'Maiandra GD'">Liste des approvisionnements</h3>
                            </div>
                        </div>
                        <!--begin::Form-->
                        <form class="form">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <div class="mb-1">
                                                <div class="form-group row">
                                                    <div class="col-lg-4">
                                                        <label>Période*</label>
                                                        <div class="input-daterange input-group" id="kt_datepicker">
                                                            <input type="text" class="form-control datatable-input" name="start" placeholder="Du" data-col-index="5" />
                                                            <div class="input-group-append">
                                                                <span class="input-group-text">
                                                                    <i class="fas fa-arrows-alt-h text-info"></i>
                                                                </span>
                                                            </div>
                                                            <input type="text" class="form-control datatable-input" name="end" placeholder="Au" data-col-index="5" />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <label>N° bordereau*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="fab fa-orcid text-info"></i>
                                                                </span>
                                                            </div>
                                                            <input type="text" class="form-control" name="url" placeholder="Entrer un n°" />
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir le n° du bordereau.</span>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <label>N° fournisseur*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="fab fa-orcid text-info"></i>
                                                                </span>
                                                            </div>
                                                            <input type="text" class="form-control" name="url" placeholder="Entrer un n°" />
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir le n° du fournisseur.</span>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <label>Nom fournisseur*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="fas fa-address-card text-info"></i>
                                                                </span>
                                                            </div>
                                                            <input type="text" class="form-control" name="url" placeholder="Entrer un nom" />
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir le nom dufournisseur.</span>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <label>Opérateur*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="fab fa-teamspeak text-info"></i>
                                                                </span>
                                                            </div>
                                                            <select class="form-control" name="option">
                                                                <option value="">Sélectionner un opérateur</option>
                                                                <option>opérateur 1</option>
                                                                <option>opérateur 2</option>
                                                                <option>opérateur 3</option>
                                                                <option>opérateur 4</option>
                                                                <option>opérateur 5</option>
                                                            </select>
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez sélectionner l'opérateur.</span>
                                                    </div>                                                                                                       
                                                </div>
                                            </div>
                                            <div class="mb-1">
                                                <div class="form-group row">                                                    
                                                    <div class="row mt-8">
                                                        <div class="col-lg-12">
                                                            &#160;&#160;<button class="btn btn-primary btn-primary--icon" id="kt_search">
                                                                <span>
                                                                    <i class="la la-search"></i>
                                                                    <span>Rechercher</span>
                                                                </span>
                                                            </button>&#160;&#160;
                                                            <button class="btn btn-outline-warning" id="kt_reset">
                                                                <span>
                                                                    <i class="la la-close"></i>
                                                                    <span>Annuler</span>
                                                                </span>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-1">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <table class="table table-bordered table-checkable" id="kt_datatable">
                                                            <thead>
                                                                <tr>
                                                                    <th>N° BORDEREAU</th>
                                                                    <th>DATE</th>
                                                                    <th>MATRICULE </th>
                                                                    <th>NOM FOURNISSEUR</th>
                                                                    <th>REF PIECE</th>
                                                                    <th>MONTANT REMISE</th>                                                                    
                                                                    <th>MONTANT VERSE</th>
                                                                    <th>ACTION</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>                                                                    
                                                                    <td></td>
                                                                    <td></td>
                                                                    <td></td>
                                                                    <td></td>
                                                                    <td></td>
                                                                    <td></td>
                                                                    <td></td>
                                                                    <td>
                                                                        <div class="example-preview" style="position: relative; right: -3px">
                                                                            <div class="btn-toolbar" role="toolbar" aria-label="...">
                                                                                <div class="btn-group mr-2" role="group" aria-label="...">
                                                                                    <!--bouton voir plus-->
                                                                                    <button type="button" class="btn btn-outline-secondary btn-icon" data-toggle="modal" data-target="#modalVoirPlus">
                                                                                        <i class="far fa-eye" data-toggle="tooltip" data-theme="dark" title="Voir plus"></i>
                                                                                    </button>
                                                                                    <!--bouton modifier-->
                                                                                    <button type="button" class="btn btn-outline-secondary btn-icon">

                                                                                        <i class="far fa-edit"></i>
                                                                                    </button>
                                                                                    <button type="button" class="btn btn-outline-secondary btn-icon">
                                                                                        <i class="fas fa-ban"></i>
                                                                                    </button>
                                                                                    <button type="button" class="btn btn-outline-secondary btn-icon dropleft" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                                        <i class="fas fa-ellipsis-v"></i>
                                                                                        <div class="dropdown-menu" style="">
                                                                                            <a class="dropdown-item" href="#">Réaliser un approvisionnement sans accessoire</a>
                                                                                            <a class="dropdown-item" href="#">Règlement de facture</a>
                                                                                            <a class="dropdown-item" href="#">Facture</a>
                                                                                            <a class="dropdown-item" href="#">Situation des règlements</a>
                                                                                            <a class="dropdown-item" href="#">Annuler l'approvisionnement</a>
                                                                                            <a class="dropdown-item" href="#">Liste des opérations</a>                                                                                            
                                                                                            <a class="dropdown-item" href="#">Modification de la date de péremption des articles</a>                                                                                           
                                                                                        </div>
                                                                                    </button>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-outline-warning" id="kt_reset">
                                    <span>
                                        <i class="la la-close"></i>
                                        <span>Annuler</span>
                                    </span>
                                </button>
                            </div>
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Card-->
                </div>
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<!--end::Content-->
