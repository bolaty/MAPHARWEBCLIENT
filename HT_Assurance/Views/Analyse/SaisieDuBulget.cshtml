        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b example example-compact">
                        <div class="card-header" style="background-color: #F5F500;">
                            <h3 class="display-5" card-label" style="font-size: 30px; font-family: 'Maiandra GD'">Saisie du bulget</h3>                          
                        </div>
                        <!--begin::Form-->
                        <form class="form">
                            <div class="card-body">
                                <div class="row">
                                    <div class="mb-2">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <label>Bulget</label>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="far fa-money-bill-alt text-info"></i>
                                                        </span>
                                                    </div>
                                                    <select class="form-control" name="option">
                                                        <option value="">Sélectionnez le bulget</option>
                                                        <option>ABC</option>
                                                        <option>2</option>
                                                        <option>3</option>
                                                        <option>4</option>
                                                        <option>5</option>
                                                    </select>
                                                </div>
                                                <span class="form-text text-muted">Veuillez sélectionnez un bulget.</span>
                                            </div>
                                            <div class="col-lg-6">
                                                <label>Service</label>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="fas fa-industry text-info"></i>
                                                        </span>
                                                    </div>
                                                    <select class="form-control" name="option">
                                                        <option value="">Sélectionnez le service</option>
                                                        <option>ABC</option>
                                                        <option>2</option>
                                                        <option>3</option>
                                                        <option>4</option>
                                                        <option>5</option>
                                                    </select>
                                                </div>
                                                <span class="form-text text-muted">Veuillez sélectionnez un service.</span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-lg-3">
                                                <label>Périodicité*</label>
                                                <div class="input-daterange input-group" id="kt_datepicker">
                                                    <input type="text" class="form-control datatable-input" name="start" placeholder="Du" data-col-index="5" />
                                                    <div class="input-group-append">
                                                        <span class="input-group-text">
                                                            <i class="far fa-hourglass text-info"></i>
                                                        </span>
                                                    </div>
                                                    <input type="text" class="form-control datatable-input" name="end" placeholder="Au" data-col-index="5" />
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <label>Période*</label>
                                                <div class="input-daterange input-group" id="kt_datepicker">
                                                    <input type="text" class="form-control datatable-input" name="start" placeholder="Du" data-col-index="5" />
                                                    <div class="input-group-append">
                                                        <span class="input-group-text">
                                                            <i class="fas fa-arrows-alt-h text-info"></i>
                                                        </span>
                                                    </div>
                                                    <input type="text" class="form-control datatable-input" name="end" placeholder="Au" data-col-index="5" />
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <label>Date de début</label>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="far fa-calendar-alt text-info"></i>
                                                        </span>
                                                    </div>
                                                    <input type="text" name="Date de début" class="form-control datatable-input" placeholder="Date au format JJ/MM/AAAA" data-col-index="4" />
                                                </div>
                                                <span class="form-text text-muted">Veuillez saisir la date de début.</span>
                                            </div>
                                            <div class="col-lg-3">
                                                <label>Date de fin</label>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                            <i class="far fa-calendar-alt text-info"></i>
                                                        </span>
                                                    </div>
                                                    <input type="text" name="Date de fin" class="form-control datatable-input" placeholder="Date au format JJ/MM/AAAA" data-col-index="4" />
                                                </div>
                                                <span class="form-text text-muted">Veuillez saisir la date de fin.</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-8">
                                        <div class="col-lg-12">
                                            <button type="submit" class="btn btn-primary btn-shadow-hover font-weight-bold">
                                                <span>
                                                    <i class="far fa-check-circle"></i>
                                                    <span>Enregistrer</span>
                                                </span>
                                            </button>
                                            <button class="btn btn-outline-warning" id="kt_reset">
                                                <span>
                                                    <i class="la la-close"></i>
                                                    <span>Annuler</span>
                                                </span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

