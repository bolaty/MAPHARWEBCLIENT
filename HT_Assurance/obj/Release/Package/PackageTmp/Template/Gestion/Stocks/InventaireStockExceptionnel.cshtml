@{
    ViewBag.Title = "InventaireStockExceptionnel";
    Layout = "~/Views/Shared/_LayoutMenuGestion.cshtml";
}


<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader" style="background: Beige">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-1 mr-5">GESTION</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Stocks</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Enregistrement</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Inventaire stock exceptionnel</a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Card-->
                    <div class="card card-custom">
                        <div class="card-header" style="background-color: #F5F500">
                            <div class="card-title">
                                <span class="card-icon">
                                    <i class="fas fa-clipboard-list text-dark icon-xl"></i>
                                </span>
                                <h3 class="card-title" style="font-size: 30px; font-family: 'Maiandra GD'">Inventaire de stock exceptionnel</h3>
                            </div>
                        </div>
                        <!--begin::Form-->
                        <form class="form">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <div class="mb-1">
                                                <div class="form-group row">
                                                    <div class="col-lg-12">
                                                        <label>Type article*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="fab fa-shopify text-info"></i>
                                                                </span>
                                                            </div>
                                                            <select class="form-control" name="option">
                                                                <option value="">Sélectionner un type article</option>
                                                                <option> 1</option>
                                                                <option> 2</option>
                                                                <option> 3</option>
                                                                <option> 4</option>
                                                                <option> 5</option>
                                                            </select>
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir le type article.</span>
                                                    </div>
                                                    <div class="col-lg-12">
                                                        <label>N° lot*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="fab fa-orcid text-info"></i>
                                                                </span>
                                                            </div>
                                                            <select class="form-control" name="option">
                                                                <option value="">Sélectionner un n° lot</option>
                                                                <option> 1</option>
                                                                <option> 2</option>
                                                                <option> 3</option>
                                                                <option> 4</option>
                                                                <option> 5</option>
                                                            </select>
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir le n° lot.</span>
                                                    </div>
                                                    <div class="col-lg-12">
                                                        <label>Date d'expiration*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="far fa-calendar-alt text-info"></i>
                                                                </span>
                                                            </div>
                                                            <select class="form-control" name="option">
                                                                <option value="">Sélectionner une date d'expiration</option>
                                                                <option> 1</option>
                                                                <option> 2</option>
                                                                <option> 3</option>
                                                                <option> 4</option>
                                                                <option> 5</option>
                                                            </select>
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir la date d'expiration.</span>
                                                    </div>
                                                    <div class="col-lg-12">
                                                        <label>Date de fabrication*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="far fa-calendar-alt text-info"></i>
                                                                </span>
                                                            </div>
                                                            <select class="form-control" name="option">
                                                                <option value="">Sélectionner une date de fabrication</option>
                                                                <option> 1</option>
                                                                <option> 2</option>
                                                                <option> 3</option>
                                                                <option> 4</option>
                                                                <option> 5</option>
                                                            </select>
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir la date de fabrication.</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="separator separator-dashed separator-success my-1"></div><br>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="mb-3">
                                                        <h3 class="font-size-lg text-dark-75 font-weight-bold mb-7"><strong>STOCK</strong></h3>
                                                        <div class="mb-2">
                                                            <table class="table table-bordered table-checkable" id="kt_datatable">
                                                                <thead>
                                                                    <tr>
                                                                        <th>CODE CIP</th>
                                                                        <th>ARTICLE</th>
                                                                        <th>PRIX D'ACHAT</th>
                                                                        <th>PRIX DE VENTE</th>
                                                                        <th>QUANTITE LOGIQUE</th>
                                                                        <th>QUANTITE PHYSIQUE</th>
                                                                        <th>ECART</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td></td>
                                                                        <td></td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>                                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-shadow-hover font-weight-bold">
                                    <span>
                                        <i class="far fa-check-circle"></i>
                                        <span>Enregistrer</span>
                                    </span>
                                </button>&#160;
                                <button class="btn btn-outline-warning" id="kt_reset">
                                    <span>
                                        <i class="la la-close"></i>
                                        <span>Annuler</span>
                                    </span>
                                </button>
                            </div>
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Card-->
                </div>
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<!--end::Content-->
