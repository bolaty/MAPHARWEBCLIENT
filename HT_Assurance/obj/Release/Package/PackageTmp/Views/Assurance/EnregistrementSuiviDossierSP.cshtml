@{
ViewBag.Title = "Enregistrement Suivi du dossier";
Layout = "~/Views/Shared/_LayoutMenuGestion.cshtml";
}


<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content" ng-controller="SuiviDossierController" ng-init="FormAddSuiviDossier()">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader" style="background: Beige">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-1 mr-5">ASSURANCE</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Opération</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Enregistrement</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Suivi du dossier</a>
                        </li>

                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->

            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b example example-compact">
                        <div class="card-header" style="background-color: #718E3E;">
                            <div class="card-title">
                                <span class="card-icon">
                                    <i class="fas fa-file-alt text-white icon-xl"></i>
                                </span>
                                <h3 class="card-title text-white" style="font-size: 30px; font-family: Maiandra GD">Suivi du dossier</h3>
                            </div>
                            <!--<div class="card-toolbar">
                                <div class="example-tools justify-content-center">
                                    <span class="example-toggle text-white" data-toggle="tooltip" title=" Voir code"></span>
                                    <span class="example-copy text-white" data-toggle="tooltip" title="Copier code"></span>
                                </div>
                            </div>-->
                        </div>
                        <!--begin::Form-->
                        <form class="form"  id="formAddSuiviDossierf" ng-init="contrainteFormAddSuiviDossier()">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <h3 class="font-size-lg text-dark-75 font-weight-bold mb-10"><strong>INFORMATIONS DU SINISTRE</strong></h3>
                                            <div class="mb-2">
                                                <div class="form-group row">
                                                   
                                                    <div class="col-lg-6">
                                                        <label>Date*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="fas fa-calendar text-info"></i>
                                                                </span>
                                                            </div>
                                                            <input type="text" class="form-control" name="addSuiviDossier_Date" placeholder="Entrer la Date" ng-model="FormAddSuiviDossier.Date"/>
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir la Date.</span>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <label>Description du sinistre*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="fas fa-marker text-info"></i>
                                                                </span>
                                                            </div>
                                                            <textarea class="form-control" name="addSuiviDossier_DesSinistre" placeholder="Entrer la Description du sinistre"  ng-model="FormAddSuiviDossier.DesSinistre"></textarea>
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir la Description du sinistre.</span>
                                                    </div>
                                                   
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                           
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-shadow-hover font-weight-bold" ng-click="ajoutFormAddSuiviDossier()">
                                    <span>
                                        <i class="far fa-check-circle"></i>
                                        <span>Enregistrer</span>
                                    </span>
                                </button>
                                <button type="submit" id="kt_notify" class="btn btn-light-success font-weight-bold" ng-click="resetFormAddSuiviDossier()">
                                    <span>
                                        <i class="fas fa-undo"></i>
                                        <span>Réinitialiser</span>
                                    </span>
                                </button>
                                <a href="ListeSuiviDossierSP" class="btn btn-icon btn-light-dark mr-2" data-toggle="tooltip" data-theme="dark" title="Retour" style="position: absolute; right: 27px">
                                    <i class="fas fa-arrow-left"></i>
                                </a>
                            </div>
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Card-->
                </div>
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<!--end::Content-->
