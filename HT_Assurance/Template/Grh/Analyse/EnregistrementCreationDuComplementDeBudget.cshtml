@{
    ViewBag.Title = "Création du complément de budget";
    Layout = "~/Views/Shared/_LayoutMenuGestion.cshtml";
}

<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader" style="background-color: beige">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h3 class="text-dark font-weight-bold my-1 mr-5">GESTION</h3>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Analyse</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Enregistrement</a>
                        </li> 
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Création du complément de budget</a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--begin::Card-->
                    <div class="card card-custom">
                        <div class="card-header" style="background-color: #F5F500;">
                            <div class="card-title">
                                <span class="card-icon">
                                    <i class="fas fa-poll-h text-dark icon-xl"></i>
                                </span>
                                <h3 class="card-label" style="font-size: 30px; font-family: 'Maiandra GD'">Création du complément de budget</h3>
                            </div>
                        </div>
                        <!--begin::Form-->
                        <form class="form">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <h3 class="font-size-lg text-dark-75 font-weight-bold mb-7"><strong>Ajout budget</strong></h3>
                                            <div class="mb-2">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <label>Libellé*</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="fas fa-quote-left text-info"></i>
                                                                </span>
                                                            </div>
                                                            <textarea type="text" class="form-control" name="url" placeholder="Entrer un libellé"></textarea>
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir le libellé.</span>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-lg-6">
                                                        <label>Date de début</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="far fa-calendar-alt text-info"></i>
                                                                </span>
                                                            </div>
                                                            <input type="text" name="Date de début" class="form-control datatable-input" placeholder="Date au format JJ/MM/AAAA" data-col-index="4" />
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir la date de début.</span>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <label>Date de fin</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">
                                                                    <i class="far fa-calendar-alt text-info"></i>
                                                                </span>
                                                            </div>
                                                            <input type="text" name="Date de fin" class="form-control datatable-input" placeholder="Date au format JJ/MM/AAAA" data-col-index="4" />
                                                        </div>
                                                        <span class="form-text text-muted">Veuillez saisir la date de fin.</span>
                                                    </div>
                                                </div>
                                                <br>
                                                <div class="col-lg-12">
                                                    <label>Budget</label>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text">
                                                                <i class="fas fa-money-bill-alt text-info"></i>
                                                            </span>
                                                        </div>
                                                        <select class="form-control" name="option">
                                                            <option value="">Sélectionnez un Budget</option>
                                                            <option>Budget1</option>
                                                            <option>Budget2</option>
                                                            <option>Budget3</option>
                                                            <option>Budget4</option>
                                                            <option>Budget5</option>
                                                        </select>
                                                    </div>
                                                    <span class="form-text text-muted">Veuillez sélectionnez un Budget.</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-8">
                                    <div class="col-lg-12">
                                        <button type="submit" class="btn btn-primary btn-shadow-hover font-weight-bold">
                                            <span>
                                                <i class="far fa-check-circle"></i>
                                                <span>Enregistrer</span>
                                            </span>
                                        </button>
                                        <button class="btn btn-outline-warning" id="kt_reset">
                                            <span>
                                                <i class="la la-close"></i>
                                                <span>Annuler</span>
                                            </span>
                                        </button>
                                        <a href="CreationDuComplementDeBudget" class="btn btn-icon btn-light-dark mr-2" data-toggle="tooltip" data-theme="dark" title="Retour" style="position: absolute; right: 27px">
                                            <i class="fas fa-arrow-left"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Card-->
                </div>
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<!--end::Content-->
